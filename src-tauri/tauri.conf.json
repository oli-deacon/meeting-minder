{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Meeting Minder",
  "version": "0.1.0",
  "identifier": "com.meetingminder.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Meeting Minder",
        "width": 1100,
        "height": 780,
        "resizable": true
      }
    ],
    "withGlobalTauri": true,
    "security": {
      "csp": null
    }
  },  
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": []
  }
}
